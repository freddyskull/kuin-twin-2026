{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "out/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}